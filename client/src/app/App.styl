@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700&family=Roboto:wght@100;300;400;500;700&display=swap');

#root
  height 100%
  font-size 10pt
*
  padding 0
  margin 0
  box-sizing border-box

body
  height 100vh
  background #fff
  font-family 'Roboto', sans-serif

/* ------ */
/* Colors */
/* ------ */

primary = #384985
primary-dark = #002258
primary-light = #6874b5

gray = #455a64
gray-light = #b0bec5

/* ----------------------- */
/* Text & Paragraph Styles */
/* ----------------------- */

h1
  font-size 3rem
  font-family 'Montserrat', sans-serif

/* --------------------- */
/* Button General Styles */
/* --------------------- */

button
  height auto
  width auto
  margin 0 0.5rem
  padding 0.5rem 1.5rem
  font-size 1rem
  transition 0.3s

.btn-rounded
  border-radius 30px

.btn-primary
  color #ffffff
  background primary
  border none
  &:hover
    opacity 0.6

.btn-secondary
  border solid 1px #ddd
  background none
  &:hover
    background #eee
